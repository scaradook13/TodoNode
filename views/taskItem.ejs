<%- include('partials/header') %>
<section class="h-[70dvh] flex items-center justify-center">
  <div class="w-3/6 p-6 bg-blue-600 text-gray-50">
    <h1 class="p-3 text-5xl">Update TODO</h1>
    <div>
      <form action="/update" method="POST">
        <div class="flex flex-col gap-3 p-3 text-gray-50">
          <label for="task" class="text-3xl font-bold">Your Task</label>
          <input
            value="<%=task.taskName %>"
            id="task"
            name="taskName"
            placeholder="e.g Deliver repairs"
            type="text"
            class="p-3 text-gray-800 border"
            required
          />
        </div>
        <input hidden name="id" value="<%= task._id %>"> </input>
        <div class="p-3">
          <button
            type="submit"
            class="w-full py-3 text-lg font-bold text-gray-500 bg-gray-100"
          >
            Update Task
          </button>
        </div>
      </form>

    </div>
  </div>
</section>

<%- include('partials/footer') %>
